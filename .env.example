# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Signing Key (optional - defaults to SECRET_KEY if not set)
# For production, generate a separate key for defense in depth:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# JWT_SIGNING_KEY=your-separate-jwt-signing-key

# Database (defaults to SQLite if not set)
# For development with PostgreSQL:
# DATABASE_URL=postgres://csu_user:csu_password@localhost:5432/csu_tracker
DATABASE_URL=sqlite:///db.sqlite3

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Web Push VAPID Keys (REQUIRED for push notifications)
# Generate with: python -c "from py_vapid import Vapid; v = Vapid(); v.generate_keys(); print('Private:', v.private_key); print('Public:', v.public_key)"
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_ADMIN_EMAIL=your-actual-email@yourdomain.com

# Cron Webhook Secret (for external cron services)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
CRON_WEBHOOK_SECRET=your-cron-webhook-secret

# CSU Score Configuration
CSU_MAX_SCORE=42

# Security - CORS and CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
